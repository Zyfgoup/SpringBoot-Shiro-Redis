<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sh.demo.core.dao.SysMenuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.sh.demo.core.entity.SysMenuEntity" id="sysMenuMap">
        <result property="menuId" column="menu_id"/>
        <result property="parentId" column="parent_id"/>
        <result property="name" column="name"/>
        <result property="url" column="url"/>
        <result property="perms" column="perms"/>
        <result property="type" column="type"/>
        <result property="icon" column="icon"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <!-- 查询用户权限集合 -->
    <select id="selectSysMenuByRoleId"  parameterType="long" resultType="com.sh.demo.core.entity.SysMenuEntity" >
      SELECT sm.* FROM sys_menu sm
      LEFT JOIN sys_role_menu se ON sm.menu_id = se.menu_id
      WHERE se.role_id = #{roleId}
    </select>


</mapper>